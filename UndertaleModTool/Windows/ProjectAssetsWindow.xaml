<Window x:Class="UndertaleModTool.ProjectAssetsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UndertaleModTool"
        mc:Ignorable="d"
        Title="Unexported project assets" Height="450" Width="800" IsVisibleChanged="Window_IsVisibleChanged" WindowStartupLocation="CenterOwner"
        Closing="Window_Closing"
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <local:ContextMenuDark x:Key="ListViewItemContextMenu">
            <MenuItem Header="Open" Click="MenuItemOpen_Click"/>
            <MenuItem Header="Open in new tab" Click="MenuItemOpenInNewTab_Click"/>
            <!--MenuItem Header="Copy" Command="Copy"/-->
            <!--MenuItem Header="Copy all" Click="MenuItemCopyAll_Click"/-->
        </local:ContextMenuDark>
    </Window.Resources>
    <DockPanel>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0">
                Below is a list of all assets currently waiting to be exported to disk for the current project, once it is next saved.
            </Label>
            <Label Grid.Row="1">
                To quickly add or remove assets from being part of the project, you can drag and drop assets here, or delete them. (TODO: not implemented)
            </Label>
            <ListView Grid.Row="2" Margin="0,8,0,0" ItemsSource="{x:Null}" x:Name="AssetsListView" Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
                <ListView.CommandBindings>
                    <!--CommandBinding Command="Copy" Executed="CopyCommand_Executed"/-->
                </ListView.CommandBindings>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
                            </Trigger>
                        </Style.Triggers>
                        <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
                        <EventSetter Event="KeyDown" Handler="ListViewItem_KeyDown"/>
                        <Setter Property="FontFamily" Value="Consolas"/>
                        <Setter Property="ContextMenu" Value="{StaticResource ListViewItemContextMenu}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="Foreground" Value="Black" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="auto"/>
                        <GridViewColumn Header="Asset Type" DisplayMemberBinding="{Binding AssetType}" Width="auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </DockPanel>
</Window>
