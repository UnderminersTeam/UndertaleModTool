<local:DataUserControl x:Class="UndertaleModTool.UndertaleEmbeddedAudioEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UndertaleModTool"
             xmlns:undertale="clr-namespace:UndertaleModLib.Models;assembly=UndertaleModLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance undertale:UndertaleEmbeddedAudio}" xmlns:strings="clr-namespace:UndertaleModTool.Resources" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} data, {1} bytes">
                        <Binding Path="FileType" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type local:UndertaleEmbeddedAudioEditor}}" Mode="OneWay" />
                        <Binding Path="Data.Length"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <local:ButtonDark Grid.Row="1" Grid.Column="0" Content="{x:Static strings:Strings.Import1}" Click="Import_Click"/>
            <local:ButtonDark Grid.Row="1" Grid.Column="3" Content="{x:Static strings:Strings.Export}" Click="Export_Click"/>

            <local:ButtonDark Grid.Row="3" Grid.Column="0" x:Name="Play" Click="Play_Click" Content="{x:Static strings:Strings.Play}"></local:ButtonDark>
            <local:ButtonDark Grid.Row="3" Grid.Column="2" x:Name="Stop" Click="Stop_Click" Content="{x:Static strings:Strings.Stop1}"></local:ButtonDark>
        </Grid>
    </Grid>
</local:DataUserControl>
