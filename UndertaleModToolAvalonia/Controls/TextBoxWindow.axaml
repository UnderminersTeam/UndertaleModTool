<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:c="clr-namespace:UndertaleModToolAvalonia.Controls"
        mc:Ignorable="d"
        x:Class="UndertaleModToolAvalonia.Controls.TextBoxWindow"
        x:DataType="c:TextBoxWindow"
        DataContext="{Binding $self}"
        Title="{Binding TitleText}"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Classes="TextBoxWindow">
    <Grid RowDefinitions="1*,Auto">
        <StackPanel Grid.Row="0">
            <TextBlock Name="MessageText" Text="{Binding Message}" TextWrapping="Wrap" />
            <TextBox Name="TextTextBox" />
        </StackPanel>
        <StackPanel Grid.Row="1" Name="Buttons" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding OkClick}" IsDefault="True">OK</Button>
            <Button Command="{Binding CancelClick}">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
