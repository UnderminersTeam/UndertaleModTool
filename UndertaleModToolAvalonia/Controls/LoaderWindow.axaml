<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:UndertaleModToolAvalonia"
        mc:Ignorable="d"
        x:Class="UndertaleModToolAvalonia.LoaderWindow"
        x:DataType="l:LoaderWindow"
        DataContext="{Binding $self}"
        Title="{Binding TitleText}"
        Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Classes="LoaderWindow"
        CanResize="False">
    <Window.KeyBindings>
        <KeyBinding Command="{Binding Close}" Gesture="Escape" />
    </Window.KeyBindings>
    <Grid RowDefinitions="Auto,Auto">
        <TextBlock Grid.Row="0" Name="MessageTextBlock" TextWrapping="Wrap" />
        <ProgressBar Grid.Row="1" Name="LoadingProgressBar" IsIndeterminate="True" />
    </Grid>
</Window>
