<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:UndertaleModToolAvalonia"
             xmlns:undertalem="clr-namespace:UndertaleModLib.Models;assembly=UndertaleModLib"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UndertaleModToolAvalonia.UndertaleVariableView"
             x:DataType="l:UndertaleVariableViewModel">
    <UserControl.Resources>
        <l:EnumTypeToValuesConverter x:Key="EnumTypeToValuesConverter" />
    </UserControl.Resources>

    <ScrollViewer>
        <Grid l:AutoGridBehavior.Enable="True" ColumnDefinitions="1*,3*" Classes="PaddedProperties">
            <Label>Name</Label>
            <l:UndertaleStringReferenceView Reference="{Binding Variable.Name}" />

            <Label>Instance type</Label>
            <ComboBox ItemsSource="{Binding Source={x:Type undertalem:UndertaleInstruction+InstanceType}, Converter={StaticResource EnumTypeToValuesConverter}}"
                      SelectedItem="{Binding Variable.InstanceType}" />

            <Label>VarID</Label>
            <TextBox Text="{Binding Variable.VarID}" />

            <Label>Name string ID</Label>
            <TextBox Text="{Binding Variable.NameStringID}" />
        </Grid>
    </ScrollViewer>
</UserControl>
