<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:UndertaleModToolAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UndertaleModToolAvalonia.UndertaleEmbeddedTextureView"
             x:DataType="l:UndertaleEmbeddedTextureViewModel">
    <UserControl.Resources>
        <l:ToSKImageUpdaterConverter x:Key="ToSKImageUpdaterConverter" />
        <l:VersionCompareConverter x:Key="VersionCompareConverter" />
    </UserControl.Resources>
    <Grid RowDefinitions="Auto,1*" MaxHeight="{Binding $parent[ScrollViewer].Viewport.Height}">
        <StackPanel Grid.Column="0">
            <Grid l:AutoGridBehavior.Enable="True" ColumnDefinitions="1*,3*" Classes="PaddedProperties">
                <Label>Scaled</Label>
                <TextBox Text="{Binding EmbeddedTexture.Scaled}" />

                <Label>Size</Label>
                <Grid ColumnDefinitions="1*,1*">
                    <TextBox Grid.Column="0" Text="{Binding EmbeddedTexture.TextureData.Width}" IsReadOnly="True" />
                    <TextBox Grid.Column="1" Text="{Binding EmbeddedTexture.TextureData.Height}" IsReadOnly="True" />
                </Grid>
            </Grid>
        
            <Grid l:AutoGridBehavior.Enable="True" ColumnDefinitions="1*,3*" Classes="PaddedProperties"
                  IsVisible="{Binding $parent[l:MainView].((l:MainViewModel)DataContext).DataVersion,
                  Converter={StaticResource VersionCompareConverter},
                  ConverterParameter=GE2.0.6}">
                <Label>Generated mips</Label>
                <TextBox Text="{Binding EmbeddedTexture.GeneratedMips}" />
            </Grid>

            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding SaveImage}">Save image</Button>
            </StackPanel>
        </StackPanel>
        
        <!-- TODO: Click on item to open -->
        <!-- TODO: Failed to load message -->
        <!-- TODO: Import/export -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
            <l:SKImageViewer>
                <l:SKImageViewer.SKImage>
                    <MultiBinding Converter="{StaticResource ToSKImageUpdaterConverter}">
                        <Binding Path="EmbeddedTexture.TextureData.Image"/>
                    </MultiBinding>
                </l:SKImageViewer.SKImage>
            </l:SKImageViewer>
        </ScrollViewer>
    </Grid>
</UserControl>
